---
import WeaponsContainer from "../components/WeaponsContainer.astro";
import LoadingMessage from "../components/LoadingMessage.astro";
import PaginationButtons from "../components/PaginationButtons.astro";
import SearchInput from "../components/SearchInput.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <SearchInput id="search-input" />
    <WeaponsContainer id="weapons-container" />
    <LoadingMessage id="loading-message" />
    <PaginationButtons
        id="pagination-buttons"
        currentPage={0}
        totalPages={0}
        onPageChange={(page) => fetchWeapons(page)}
    />
</Layout>